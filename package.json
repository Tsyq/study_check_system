{
  "name": "smart-study-checkin-system",
  "version": "1.0.0",
  "description": "智能学习打卡系统 - 帮助同学养成学习习惯，记录并分享学习进度",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "init-db": "node server/scripts/init-db.js",
    "reset-db": "node server/scripts/init-db.js"
  },
  "dependencies": {
    "antd": "^5.27.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.0",
    "nodemailer": "^6.9.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "学习打卡",
    "学习计划",
    "社交学习",
    "进度管理"
  ],
  "author": "智能学习打卡系统团队",
  "license": "MIT"
}
